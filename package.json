    "@typescript-eslint/parser": "5.17.0",
    "concurrently": "7.0.0",
    "dependency-cruiser": "11.4.1",
    "dumper.js": "1.3.1",
    "eslint": "8.12.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "2.5.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-unicorn": "41.0.1",
    "husky": "7.0.4",
    "jest": "27.5.1",
    "lerna": "4.0.0",
    "lerna-changelog": "2.2.0",
    "prettier": "2.6.1",
    "ts-jest": "27.1.4",
