{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": false,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "lib": [
      "es7"
    ],
    "baseUrl": "."
  },
  "include": [
    "packages/**/*",
    "integration/**/*",
    "sample/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
