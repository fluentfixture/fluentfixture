{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "removeComments": false,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "outDir": "dist",
    "lib": ["es7"],
    "baseUrl": ".",
    "paths": {
      "@fluentfixture/core": ["./packages/core"],
      "@fluentfixture/format": ["./packages/format"],
    }
  },
  "include": ["packages/**/*", "integration/**/*", "sample/**/*"],
  "exclude": ["node_modules"]
}
