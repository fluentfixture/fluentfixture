{
    "verbose": true,
    "collectCoverage": true,
    "coverageReporters": ["lcov", "json"],
    "collectCoverageFrom": [
        "./packages/**/src/**",
        "!./packages/**/lib/**"
    ],
    "transform": {
        "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/tests/.*|(\\.|/)spec)\\.ts$",
    "moduleFileExtensions": [
        "ts",
        "js",
        "json",
        "node"
    ],
    "globals": {
        "ts-jest": {
            "tsconfig": "tsconfig.json"
        }
    },
    "testPathIgnorePatterns" : [
        "<rootDir>/.eslintrc.spec.js"
    ]
}
